      <view wx:for="{{ goodsAndItemNameList }}" wx:key="{{item.id}}">
        <van-sticky class="hd">
          <text class="line"></text>
          <text class="txt">{{item.itemName}}</text>
          <text class="line"></text>
        </van-sticky>
        <van-card class="custom-card" num="{{}}" tag="{{item.isHot?'热卖':''}}" centered="true" origin-price="{{item.counterPrice}}" price="{{item.retailPrice}}" desc="{{item.brief}}" title="{{item.name}}" thumb="{{ item.picUrl }}" wx:for="{{ item.litemallGoods }}" wx:key="{{item.id}}" thumb-link="/pages/goods/goods?id={{item.id}}">
          <view class="footerContainer" slot="footer">
