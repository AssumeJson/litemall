  <van-popup show="{{ show }}" position="bottom" custom-style="height: 20%;  border-top-left-radius: 50rpx; border-top-right-radius: 50rpx;" bind:close="onClose">
    <view wx:for="{{allCoupons}}">
      {{item.name}}
