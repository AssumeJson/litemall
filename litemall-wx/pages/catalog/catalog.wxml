  </van-popup>
<view class="container">
  <view class="catalog" style="height: {{screenHeight}}px;">
    <scroll-view style="height: {{screenHeight}}px;" class="nav" scroll-y="{{true}}">
      <view class="item {{ currentCategory.id == item.id ? 'active' : ''}}" wx:for="{{allSubCategoryList}}" wx:key="id" data-id="{{item.id}}" data-index="{{index}}" bindtap="switchCate">{{item.name}}
      </view>
    </scroll-view>
    <scroll-view class="cate" scroll-y="{{true}}" style="height: {{screenHeight}}px;" enhanced="{{true}}" show-scrollbar="{{false}}">
      <swiper class="bottomSwiper" indicator-dots="true" autoplay="true" interval="3000" duration="1000">
        <swiper-item wx:for="{{ads}}" wx:key="id">
          <block wx:if="{{item.link>0}}">
            <navigator url="/pages/goods/goods?id={{item.link}}">
              <image src="{{item.url}}" background-size="cover"></image>
            </navigator>
          </block>
          <block wx:else>
            <image src="{{item.url}}" background-size="cover"></image>
          </block>
        </swiper-item>
      </swiper>

      <!-- <navigator url="url" class="banner">
        <image class="image" src="{{currentCategory.picUrl}}"></image>
        <view class="txt">{{currentCategory.frontName}}</view>
      </navigator> -->
      <!-- <van-sticky class="hd" offset-top="{{ 50 }}"> -->
      <van-sticky class="hd">
        <text class="line"></text>
        <text class="txt">{{currentCategory.name}}</text>
        <text class="line"></text>
      </van-sticky>
      <!-- <view class="hd">
        <text class="line"></text>
        <text class="txt">{{currentCategory.name}}</text>
        <text class="line"></text>
      </view> -->
      <van-card num="{{}}" tag="{{item.isHot?'热卖':''}}" centered="true" origin-price="{{item.counterPrice}}" price="{{item.retailPrice}}" desc="{{item.brief}}" title="{{item.name}}" thumb="{{ item.picUrl }}" wx:for="{{ allGoodsCategories }}" wx:key="{{item.id}}" thumb-link="/pages/goods/goods?id={{item.id}}">
        <view slot="footer">
          <!-- <van-button size="mini">按钮</van-button> -->
          <van-button round color="rgb(92, 34, 35);" size="mini" data-id="{{item.id}}" data-name="{{item.name}}" bind:click="handleClick">
            <van-icon name="plus" color="white" />
          </van-button>
        </view>
      </van-card>
