page {
  height: 100%;
}

.custom-bar__wrapper {
  left: 24rpx;
  padding: 0 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.search-group {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background:#F0F8FF ;
  border-radius: 100rpx;
  padding: 0 15rpx;
}
.search-group > input {
  font-size: 25rpx;
  left: 14px;
}
.search-group > image {
  height: 36rpx;
  width: 36rpx;
  margin-right: 20rpx
}

.search {
  /* height: 88rpx; */
  width: 100%;
  padding: 0 36rpx;
  background: #fff;
  display: flex;
  align-items: center;
}

.search .input {
  width: 690rpx;
  height: 56rpx;
  background: #ededed;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.search .van-icon-search {
  line-height: 56rpx;
}

.search .txt {
  height: 42rpx;
  line-height: 42rpx;
  color: #666;
  padding-left: 5rpx;
  font-size: 25rpx;
}

.container {
  background: #f9f9f9;
  /* height: 100%; */
  /* width: 100%; */
  display: flex;
  /* height:100vh; */
  overflow:hidden;
  flex-direction: column;
}

/* swiper 的样式可以根据需要自行调整 */
.cellAdSwiper {
  flex-shrink: 0;
  height: 25px;
  width: 90%;  /* 可以根据实际需求调整宽度 */
}

.right-aligned-text {
  display: flex;
  justify-content: space-between; /* 子元素两端对齐 */
  align-items: center;            /* 垂直居中 */
  width: 100%;                    /* 占满父元素宽度 */
  margin-left: 30rpx;
  color: rgb(92, 34, 35);
}

/* 定义一个容器来包裹 swiper 和最外层的 view */
.flex-container {
  display: flex;
  justify-content: space-between; /* 两端对齐 */
  align-items: center;            /* 垂直居中 */
}

/* 最外层 view 的样式 */
.right-side-view {
  color: slategrey;
  font-size: small;
  margin-left: auto; /* 推到最右侧 */
}

/* 如果需要，可以单独给 van-icon 添加样式 */
.right-side-view .van-icon {
  margin-right: 5px; /* 可以根据需要调整间距 */
}

.popupTopView {
  margin-top: 30rpx;
}
.popupSecendView {
  margin-left: 30rpx;
  color: rgb(92, 34, 35);
}

.footerContainer {
  display: flex;
  justify-content: flex-end; /* 将子元素推到最右边 */
  align-items: center;        /* 垂直居中 */
}


/* 自定义按钮样式 */
.buttonCard {
  background-color: rgb(92, 34, 35);
  width: 50rpx; /* 按钮直径 */
  height: 50rpx; /* 保持宽度和高度一致，形成圆形 */
  border-radius: 50%; /* 使按钮变成圆形 */
  border: none; /* 移除边框 */
  display: flex; /* 使用 Flexbox 布局 */
  justify-content: center; /* 水平居中 */
  align-items: center; /* 垂直居中 */
  cursor: pointer; /* 鼠标悬停时显示手型指针 */
  margin-left: 90% ;
}

.buttonCard .van-icon {
  font-size: 25rpx; /* 图标大小 */
  color: white; /* 图标颜色 */
}

/* 自定义card 的样式 */
.custom-card .van-card {
  background-color: white;
  font-size: large;
  border-radius: 30rpx;
}

.catalog {
  flex: 1;
  width: 100%;
