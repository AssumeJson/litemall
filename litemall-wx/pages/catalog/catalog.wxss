.category-item {
  text-align: center;
  line-height: 90rpx;
  width: 162rpx;
  height: 90rpx;
  color: #333;
  font-size: 28rpx;
  /* border-left: 6rpx solid #fff; */
  background-color: #ededed;
}

.category-item.active {
  /* color: #ab956d; */
